<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- main fragment -->
    <style name="ImageForToDay">
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="android:layout_marginStart">@dimen/margin_25dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/content_description_image_to_day</item>
    </style>

    <style name="default_constraint_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="search_view_layout">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_gray_light</item>
    </style>

    <style name="input_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="layout_input_search">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="endIconMode">custom</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:hint">@string/search_text_hint</item>
    </style>

    <!-- progress sheet fragment -->
    <style name="layout_behave" parent="default_constraint_layout">
        <item name="android:background">@color/main_white_night</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">@dimen/margin_50dp</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
    </style>

    <style name="inform_bottom_sheet_text_title_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_20dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_25dp</item>
    </style>

    <style name="inform_title_to_image" parent="inform_bottom_sheet_text_title_default">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/margin_20dp</item>
    </style>

    <style name="inform_desc_to_image" parent="inform_bottom_sheet_text_title_default">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/margin_16dp</item>
    </style>

    <style name="cheep_items_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_5dp</item>
        <item name="android:layout_marginStart">@dimen/margin_5dp</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>
        <item name="chipSpacingHorizontal">@dimen/margin_16dp</item>
    </style>

    <style name="cheep_items" parent="Widget.Material3.Chip.Suggestion.Elevated">
        <item name="android:checkable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>